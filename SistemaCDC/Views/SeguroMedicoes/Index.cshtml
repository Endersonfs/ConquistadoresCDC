@model IEnumerable<SistemaCDC.Models.SeguroMedico>

@{
    ViewData["Title"] = "Seguro Medico";
}

<h2>Registro de Seguro Médico</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Create New</a>
    <!--Boton Imprimir-->
    <a href="#" class="btn btn-success">
        <span class="glyphicon glyphicon-print" aria-hidden="true"></span> imprimir
    </a>
    <!--final del boton imprimir-->
    <!--nuevo-->
    <!--
    <a data-toggle="modal" data-target="#modalAC" class="btn btn-info">Registrar</a>-->
</p>
<table class="table table-striped">
    <thead class="bg-info">
        <tr>
            <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sexo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimemto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombrePadre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int numero=0; }
@foreach (var item in Model) {
    @if(item.SeguroID>0){ numero++;}
        <tr>
            <td>@numero</td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimemto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePadre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @if (User.IsInRole("Administrador"))
                {
                    <a asp-action="Details" asp-route-id="@item.SeguroID" class="btn btn-success"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Ver detalles</a><t>|</t>
                }
                <a asp-action="Edit" asp-route-id="@item.SeguroID" class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a> <t>|</t>
                <a asp-action="Delete" asp-route-id="@item.SeguroID" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="modal" id="modalAC" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title">Agregar al Seguro Medico</h3>
            </div>
            <div class="modal-body">
                <form asp-action="">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="nombre" class="col-md-2 control-label">Nombre</label>
                            <div class="col-md-10">
                                <input for="nombre" id="nombre" placeholder="Nombre" name="nombre" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="apellido" class="col-md-2 control-label">Apellido</label>
                            <div class="col-md-10">
                                <input for="apellido" id="apellido" placeholder="Apellido" name="apellido" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="sexo" class="col-md-2 control-label">Sexo</label>
                            <div class="col-md-10">
                                <input for="sexo" id="sexo" placeholder="Sexo" name="sexo" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="edad" class="col-md-2 control-label">Edad</label>
                            <div class="col-md-10">
                                <input for="edad" id="edad" placeholder="Edad" name="edad" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="fechanacimiento" class="col-md-2 control-label">Fecha Nacimiento</label>
                            <div class="col-md-10">
                                <input type="date" for="fechanacimiento" id="fechanacimiento" placeholder="Fecha Nacimiento" name="fechanacimiento" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="nombrepadres" class="col-md-2 control-label">Padre o tutor</label>
                            <div class="col-md-10">
                                <input for="nombrepadre" id="nombrepadre" placeholder="Nombre padre o tutor" name="nombrepadre" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="estado" class="col-md-2 control-label">Estado</label>
                            <div class="col-md-10">
                                <select id="estado" class="form-control">
                                    <option value='0'>Seleccione un Estado</option>
                                    <option value='true'>Activo</option>
                                    <option value='false'>No activo</option>
                                </select>
                            </div>
                        </div>
                        <label id="mensaje" class="col-md-2 control-label"></label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="registrar()" class="btn btn-primary">Guardar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>